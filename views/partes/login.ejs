<div class="container">
    <h2>Formulario de Registro 2</h2><br>
    <form action="/agregarCita" method="POST">
        <div class="form-row ">
            <div class="form-group col-md-6">
                <label for="inputEmail4">Nombre:</label>
                <input type="text" name="nombre" class="form-control" id="inputEmail4" required>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputEmail4">Apellido:</label>
                <input type="text" name="nombre" class="form-control" id="inputEmail4" required>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputEmail4">Correo:</label>
                <input type="email" name="nombre" class="form-control" id="inputEmail4" required>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputEmail4">Contraseña:</label>
                <input type="password" name="nombre" class="form-control" id="inputEmail4" required>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputEmail4">Confirmar contraseña:</label>
                <input type="password" name="nombre" class="form-control" id="inputEmail4" required>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>¿Brindar Servicios?</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1"
                        value="option1" checked>
                    <label class="form-check-label" for="exampleRadios1">
                        Si
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2"
                        value="option2">
                    <label class="form-check-label" for="exampleRadios2">
                        No
                    </label>
                </div>
            </div>
        </div><br>
        <button type="submit" class="btn btn-primary">Aceptar</button>
    </form>
</div><br>