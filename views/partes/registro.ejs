
    <div class="container">
        <h2>Formulario de Registro</h2><br>
        <form action="/agregarCita" method="POST">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputEmail4">Nombre:</label>
                    <input type="text" name="nombre" class="form-control" id="inputEmail4" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="inputEmail4">Apellido:</label>
                    <input type="text" name="nombre" class="form-control" id="inputEmail4" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputEmail4">Correo:</label>
                    <input type="email" name="nombre" class="form-control" id="inputEmail4" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputEmail4">Contraseña:</label>
                    <input type="password" name="nombre" class="form-control" id="inputEmail4" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="inputEmail4">Confirmar contraseña:</label>
                    <input type="password" name="nombre" class="form-control" id="inputEmail4" required>
                </div>
            </div>
